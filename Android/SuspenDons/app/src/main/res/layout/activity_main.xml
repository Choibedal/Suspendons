<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ckankonmange.suspendons.MainActivity"
    android:orientation="vertical">


    <!--Login Activity, then Profil activity-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_main">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:scaleType="fitXY"
            android:src="@drawable/login"
            android:adjustViewBounds="true"
            android:id="@+id/login_icon"
            android:onClick="goToLoginActivity" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.66"
            android:scaleType="fitCenter"
            android:text="Login"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="fill_vertical"
            android:id="@+id/login_text"/>

    </LinearLayout>

    <!--Map Activity-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/map_main">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:scaleType="fitXY"
            android:src="@drawable/map"
            android:adjustViewBounds="true"
            android:id="@+id/map_icon"
            android:onClick="goToMapActivity" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.66"
            android:scaleType="fitCenter"
            android:text="Map"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="fill_vertical"
            android:id="@+id/map_text"/>

    </LinearLayout>

    <!--Don Activity-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gift_main">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:scaleType="fitXY"
            android:src="@drawable/donation"
            android:adjustViewBounds="true"
            android:id="@+id/gift_icon"
            android:onClick="goToDonationActivity" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.66"
            android:scaleType="fitCenter"
            android:text="Don"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="fill_vertical"
            android:id="@+id/gift_text"/>

    </LinearLayout>

    <!--Ad Activity-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ad_main">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:scaleType="fitXY"
            android:src="@drawable/megaphone"
            android:adjustViewBounds="true"
            android:id="@+id/ad_icon"
            android:onClick="goToAdActivity" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.66"
            android:scaleType="fitCenter"
            android:text="Visionner une publicitÃ©"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="fill_vertical"
            android:id="@+id/ad_text"/>

    </LinearLayout>

</LinearLayout>
